.comic
  width 90%
  display block
  margin auto
  border white solid 6px
  border-radius 25px
  background-color white
  padding 15px

.commentSection
  background-color white
  border-radius 25px
  width 94%
  display block
  margin auto

.commentBox
  width 95%
  padding 15px
  display block
  margin auto

#navBarImage
  width 100%
  height 100%
  display inline-block
  margin auto


.HolyGrail,
.HolyGrail-body
  display flex
  flex-direction column
  text-align center

.HolyGrail-body
  width 900px
  margin auto

.HolyGrail-left
  order -1
  min-height 100px

.HolyGrail-right
  min-height 100px

@media (min-width : 768px)
  .HolyGrail-body
    flex-direction row
    flex 1

  .HolyGrail-content
    flex 1

  .HolyGrail-left, .HolyGrail-right
    flex 0 0 12em


@media screen and (max-width: 900px)
  .HolyGrail-body
    width 100%